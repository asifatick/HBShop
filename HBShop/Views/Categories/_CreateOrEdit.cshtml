@model HBShop.Models.Category

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.CategoryName)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.CategoryName)
    @Html.ValidationMessageFor(model => model.CategoryName)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.UpdateDate)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.UpdateDate)
    @Html.ValidationMessageFor(model => model.UpdateDate)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.IsDeleted)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.IsDeleted)
    @Html.ValidationMessageFor(model => model.IsDeleted)
</div>

<div class="editor-label">
    ApplicationUser
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.ApplicationUserId, ((IEnumerable<HBShop.Models.ApplicationUser>)ViewBag.PossibleApplicationUsers).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.ApplicationUserId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.ApplicationUserId)
</div>
